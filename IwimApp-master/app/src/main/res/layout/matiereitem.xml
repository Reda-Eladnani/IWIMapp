<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemMenu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:padding="10dp"
    android:background="@drawable/userborder"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >
             <ImageView
                 android:id="@+id/userAdd"
                 android:layout_width="27dp"
                 android:layout_height="27dp"
                 android:background="@drawable/corner"
                 android:layout_gravity="end"
                 android:src="@drawable/subject"
                 />
             <TextView
                 android:id="@+id/label"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingLeft="2dp"
                 android:textSize="9pt"
                 android:text="Module module "
                 android:textColor="@android:color/holo_red_dark"
                 />
         </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp">
                <ImageView
                    android:id="@+id/teacher"
                    android:layout_width="27dp"
                    android:layout_height="28dp"
                    android:background="@drawable/corner"
                    android:layout_gravity="end"
                    android:src="@drawable/teacher"
                    />
                <TextView
                    android:id="@+id/teachername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textSize="8pt"
                    android:text="Professeur Ali Alaoui"
                    android:textColor="@android:color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:id="@+id/Calendar"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/corner"
                    android:layout_gravity="end"
                    android:paddingLeft="3dp"
                    android:src="@drawable/calendar"
                    />
                <TextView
                    android:id="@+id/semestre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:textSize="8pt"
                    android:text="Semestre 1"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/userDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="43dp"
                android:background="@drawable/corner"
                android:src="@drawable/deleteuser"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>